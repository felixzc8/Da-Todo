<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:outlineAmbientShadowColor="#E91E63"
    android:outlineSpotShadowColor="#E91E63">

    <ImageView
        android:id="@+id/taskImage_ImageView_tasksItems"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/taskName_TextView_TasksItems"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Task Name"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/taskImage_ImageView_tasksItems"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskTime_TextView_TasksItems"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Time"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/dollar_TextView_TasksItems"
        app:layout_constraintTop_toBottomOf="@+id/taskName_TextView_TasksItems" />

    <TextView
        android:id="@+id/dollar_TextView_TasksItems"
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="$"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/taskImage_ImageView_tasksItems"
        app:layout_constraintTop_toBottomOf="@+id/taskName_TextView_TasksItems" />

    <TextView
        android:id="@+id/points_TextView_TasksItems"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="Reward"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/taskReward_TextView_TasksItems2"
        app:layout_constraintTop_toBottomOf="@+id/taskTime_TextView_TasksItems" />

    <TextView
        android:id="@+id/taskReward_TextView_TasksItems2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Points:"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/taskImage_ImageView_tasksItems"
        app:layout_constraintTop_toBottomOf="@+id/taskTime_TextView_TasksItems" />
</androidx.constraintlayout.widget.ConstraintLayout>