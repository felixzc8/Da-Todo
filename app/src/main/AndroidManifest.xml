<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.da_todo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DaTodo">
        <activity
            android:name=".Controllers.TimerActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.TasksAcvitiy"
            android:exported="false" />
        <activity
            android:name=".Controllers.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.RewardsActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.AddTaskActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.MainActivity"
            android:exported="false" />
    </application>

</manifest>