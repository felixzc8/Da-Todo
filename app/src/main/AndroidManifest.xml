<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.da_todo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DaTodo">
        <activity
            android:name=".Controllers.AddTaskPinActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.AddAllTaskActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.AllTaskActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.PetCreateActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.TimerActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.TasksActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.PetActivity"
            android:exported="false" />
        <activity
            android:name=".Controllers.AddTaskActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>